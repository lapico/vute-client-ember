<div>
  <h4>User details</h4>
  <p>{{model.name}}</p>
  <p>{{model.email}}</p>
  <p>{{model.password}}</p>
</div>

<form {{action "save" on="submit"}}>
  <p>
    <label>Firstname:
      {{input value=model.name}}
    </label>
  </p>
  <p>
    <label>Email:
      {{input value=model.email}}
    </label>
  </p>
  <p>
    <label>Password:
      {{input value=model.password}}
    </label>
  </p>
  <input type="submit" value="Save"/>
  <button {{action "cancel"}}>Cancel</button>
</form>

{{#if errorMessage}}
  <p>
    <code>{{errorMessage}}</code>
  </p>
{{/if}}
